<p id="notice"><%= notice %></p>
<%= image_tag @employee.photo.url(:small) %>


<p>
  <strong>ID:</strong>
  <%= @employee.id %>
</p>

<p>
  <strong>Name:</strong>
  <%= @employee.name %>
</p>

<p>
  <strong>City:</strong>
  <%= @employee.city.name %>
</p>

<p>
  <strong>Sub-ordinates(count):</strong>
  <%= @employee.subordinates.count %>
</p>
<ol>
<table>
  <thead>
    <tr>
      <th>S no.</th>
      <th>Name</th>
      <th>City</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @employee.subordinates.each do |sub| %>
        <tr>
        <td><li></li></td>
        <td><%=sub.name%></td>
        <td><%= sub.city.name %></td>
       
        </tr>
    <% end %>
  </tbody>
</table>
</ol>


<%= link_to 'Edit', edit_employee_path(@employee) %> |
<%= link_to 'Back', employees_path %>
