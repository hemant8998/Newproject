<h1>Managers</h1>

<table>
  <thead>
    <tr>
      <th>S no.</th>
      <th>Name</th>
      <th>City</th>
      <th>Sub</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @managers.each do |manager| %>
        <tr>
        <td><%=manager.id%></td>
        <td><%=link_to manager.name, manager %></td>
        <td><%= manager.city.name %></td>
        <td><%=manager.subordinates.count%></td>
        <td><%= link_to 'Show', manager %></td>
        <td><%= link_to 'Edit', edit_manager_path(manager) %></td>
        <td><%= link_to 'Destroy', manager, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
    <% end %>
  </tbody>
</table>

